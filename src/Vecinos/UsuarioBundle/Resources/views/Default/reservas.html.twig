{% extends '::app.html.twig' %}

{% block title %}Últimas reservas que has realizado{% endblock %}
{% block id 'reservas' %}

{% block article %}
    <h1>{{ block('title') }}</h1>
    
    {% for reserva in reservas %}
         {# Es obligatorio añadir el filtro date para que twig pueda convertir las fechas/horas a string #}
        {{ reserva.fecha|date('Y/m/d') }}
        {{ reserva.horainicio|date('H:i:s') }}
        {{ reserva.horafin|date('H:i:s') }}
        {{ reserva.espacio.nombre }}
    <br>
    {% endfor %}
{% endblock %}

{% block aside %}
    {{ parent() }}

    <section id="nosotros">
        <h2>Sobre nosotros</h2>
