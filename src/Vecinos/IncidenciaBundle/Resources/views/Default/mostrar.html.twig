{% extends '::app.html.twig' %}

{% block title %}{{ incidencia.titulo }}{% endblock %}
{% block id 'mostrar' %}


{% block article %}
   
   <article class="blog">
        
            <div class="date"><time datetime="{{ incidencia.fecha|date('c') }}">{{ incidencia.fecha|date('l, F j, Y') }}</time></div>
            <h2>{{ incidencia.titulo }}</h2>
        
       {# <img src="{{ asset(['images/', blog.image]|join) }}" alt="{{ blog.title }} image not found" class="large" />
        #}
        <div>
            <p>{{ incidencia.descripcion }}</p>
        </div>
        {% for imagen in arrayimagenes%}
    <img 
         src="/uploads/images/{{imagen}} " 
         title="{{imagen}}">
    
    {% endfor %}    
    </article>
    
{% endblock %}

{% block aside %}
    {{ parent() }}

    {% render "IncidenciaBundle:Default:sidebar" %}

{% endblock %}


    